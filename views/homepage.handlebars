<!-- Loop over each object in the projects array -->
{{#each reviews as |review| }}
<div class="row">
  <div class="col-md-5">
    <h2>
      <a href="/review/{{review.id}}">{{review.name}}</a>
    </h2>
    <p>{{rating}}</p>
    <p>Created by {{review.user.name}} on {{formatDate}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{review.description}}
    </p>
  </div>
</div>
{{/each}}